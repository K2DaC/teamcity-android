<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Projects" >
    </PreferenceCategory>

    <MultiSelectListPreference
        android:enabled="false"
        android:key="projectsHidden"
        android:summary="@string/Settings_hidden_projects_summary"
        android:title="@string/Settings_hidden_projects" />

    <PreferenceCategory android:title="@string/Settings_user_preferences" >
    </PreferenceCategory>

    <EditTextPreference
        android:inputType="textUri"
        android:key="serverUrl"
        android:persistent="true"
        android:title="@string/Settings_server_address" />
    <EditTextPreference
        android:key="userLogin"
        android:persistent="true"
        android:title="@string/Settings_login" />
    <EditTextPreference
        android:inputType="textPassword"
        android:key="userPassword"
        android:persistent="true"
        android:title="@string/Settings_password" />

    <Preference
        android:enabled="true"
        android:key="logout"
        android:persistent="false"
        android:selectable="true"
        android:summary="@string/Settings_logout_summary"
        android:title="@string/Settings_logout" />

    <PreferenceCategory android:title="@string/Settings_application" >
    </PreferenceCategory>

    <Preference
        android:key="version"
        android:persistent="false"
        android:selectable="false"
        android:summary=""
        android:title="@string/Settings_version" />

</PreferenceScreen>